{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "checkJs": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.js", "./src/**/*.jsx"]
}
